<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".measurement.MeasurementResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61.8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="측정 결과"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#1d1d1d"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24.2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:orientation="horizontal"
        android:weightSum="375">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="116.8" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140">
            <ImageView
                android:id="@+id/measurement_result_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="118.1"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/measurement_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="262"
        android:layout_margin="24dp"
        android:background="@drawable/round_rectangle"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/measurement_result_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/measurement_result_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/measurement_result_cm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:weightSum="375">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="42"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139.5">
            <Button
                android:id="@+id/measurement_again_button"
                android:background="@drawable/round_rectangle"
                android:text="재촬영"
                android:textSize="16dp"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12.4"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139.5">
            <Button
                android:id="@+id/save_measurement_result_button"
                android:background="@drawable/rectangle_button"
                android:text="저장"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="41.5"/>
    </LinearLayout>


</LinearLayout>