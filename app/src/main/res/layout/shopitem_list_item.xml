<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="152dp"
            android:layout_height="152dp">

            <ImageView
                android:id="@+id/recycler_view_item_best_item_image"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/shop_item_example_img_2" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/heart_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:lottie_autoPlay="false"
                app:lottie_fileName="heart_animation.json" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/recycler_view_item_best_item_name"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="데이 반목니트" />


            <TextView
                android:id="@+id/recycler_view_item_best_original_price"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textColor="#FF0000"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
