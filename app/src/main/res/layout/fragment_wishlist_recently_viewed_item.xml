<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".wishlist.topbarFragment.WishlistRecentlyViewedItemFragment">

    <!--최근 본 상품이 없을 때-->
    <RelativeLayout
        android:id="@+id/have_not_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recent_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:src="@drawable/wishlist_recently_viewed_item" />

    </RelativeLayout>


    <!--최근 본 상품이 있을 때-->
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recycler_view_recently_viewed_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</FrameLayout>