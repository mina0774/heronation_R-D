<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="152dp"
            android:layout_height="152dp">

            <ImageView
                android:id="@+id/recycler_view_recently_viewed_item_image"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/shop_item_example_img_2" />

            <ImageButton
                android:id="@+id/recently_viewed_delete_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_delete_clothes"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/recycler_view_recently_viewed_item_name"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="데이 반목니트" />


            <TextView
                android:id="@+id/recycler_view_recently_viewed_price"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textColor="#FF0000"
                android:textSize="12sp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/recycler_view_recently_viewed_item_id"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
