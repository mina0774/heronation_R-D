<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".measurement.Style.MeasurementStyleActivity"
    android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:onClick="click_back_button"
                android:src="@drawable/ic_back_button_24dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스타일"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Style AI"
                android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아하는 스타일을 2개만 선택해 주세요." />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="1680dp"
                android:layout_marginTop="10dp"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_1"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/simplebasic" />

                    <ImageButton
                        android:id="@+id/style_2"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feminine"/>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_3"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lovely" />

                    <ImageButton
                        android:id="@+id/style_4"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/casual" />
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_5"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sexyglam" />

                    <ImageButton
                        android:id="@+id/style_6"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chic"/>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_7"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/unique" />

                    <ImageButton
                        android:id="@+id/style_8"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/campuslook"/>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_9"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/officelook" />

                    <ImageButton
                        android:id="@+id/style_10"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/couplelook"/>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_11"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/romantic" />

                    <ImageButton
                        android:id="@+id/style_12"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vintage"/>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/style_13"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/luxury" />

                    <ImageButton
                        android:id="@+id/style_14"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/street"/>
                </TableRow>


            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/measurement_style_finish_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_background"
                    android:text="완료" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>