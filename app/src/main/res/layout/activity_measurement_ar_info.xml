<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".measurement.AR.MeasurementArInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:onClick="click_back_button"
                android:src="@drawable/ic_back_button_24dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AR"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:layout_weight="0.140">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.1551"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_cloth_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015"
                    android:textSize="12dp"
                    android:text="옷 이름"
                    android:textColor="#777777"
                    android:gravity="center_vertical"/>

                <EditText
                    android:id="@+id/ar_cloth_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.040"
                    android:hint="ex) 빨간 스웨터"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:textColor="#777777"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_cloth_category"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015"
                    android:textSize="12dp"
                    android:text="옷 카테고리"
                    android:textColor="#777777"
                    android:gravity="center_vertical"/>

                <Spinner
                    android:id="@+id/ar_spinner_select_category"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/underline"
                    android:layout_height="0dp"
                    android:layout_weight="0.040"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.240">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.312"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_body" />

                <ImageView
                    android:id="@+id/ar_start_measure_image_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.050">

            <Button
                android:layout_margin="12dp"
                android:id="@+id/ar_start_measure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3427"
                android:background="@drawable/rectangle_button"
                android:gravity="center"
                android:text="측정 시작하기"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>