<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".mypage.MypageConnectingFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/mypage_ninkname_text"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@drawable/mypage_background_top"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="안녕하세요" />

                <ImageButton
                    android:id="@+id/mypage_userModify_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_settings_black" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center|center_horizontal"
                android:background="@drawable/mypage_background_bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mypage_mysize_btn"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:background="#00000000"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="My size"
                    android:textColor="#ff576c" />


                <Button
                    android:id="@+id/mypage_mystyle_btn"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:background="#00000000"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="My style"
                    android:textColor="#ff576c" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle"
                android:orientation="horizontal">

            <Button
                android:id="@+id/mypage_notice_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textColor="#5d5d5d"
                android:text="공지사항" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mypage_service_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:textColor="#5d5d5d"
                    android:text="서비스 이용 약관" />


                <Button
                    android:id="@+id/mypage_personalinfo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:textColor="#5d5d5d"
                    android:text="개인정보 취급방침" />

            </LinearLayout>


            <Button
                android:id="@+id/mypage_logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_background_pink"
                android:textColor="#ffffff"
                android:text="로그아웃" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="버전정보 1.00.00 최신 버전입니다."
                    android:textAlignment="center"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Z-Shop은 상품에 직접 관여하지 않으며,\n상품 주문, 배송과 환불의 의무와 책임은 각 판매업체에 있습니다."
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

</FrameLayout>