<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.ItemCompareBodySizeActivity">


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:onClick="click_back_button"
            android:src="@drawable/ic_back_button_24dp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 체형과 비교하기"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            />
    </LinearLayout>


    <!-- 신체와 비교하기 -->
    <LinearLayout
        android:id="@+id/have_body_size_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginRight="11.3dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginTop="6.7dp"
            android:layout_marginBottom="6.7dp"
            android:background="@drawable/cloth_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_button"
                android:text="신체와 비교하기"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/have_not_body_size_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_centerHorizontal="true"
            android:text="고객님의 신체에 대한\n사이즈 정보가 없습니다."
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_click_background"
            android:text="신체 사이즈 등록하기"
            android:textColor="#ffffff" />

    </RelativeLayout>

</LinearLayout>