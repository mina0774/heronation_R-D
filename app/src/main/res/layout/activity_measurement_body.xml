<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".measurement.Body.MeasurementBodyActivity">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:onClick="click_back_button"
            android:src="@drawable/ic_back_button_24dp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 체형"
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/btn_background"
            android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="고객님의 신체 사이즈를 입력해주세요"
            android:textSize="15sp"
            android:textColor="#2f2f30"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록된 체형정보는 언제든 수정할 수 있으며 비교 데이터로 활용됩니다."
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#acacac"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@drawable/btn_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="17sp"
            android:textColor="#2f2f30"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20.3dp"
            android:layout_marginBottom="10.7dp"/>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register_Female"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:text="여성" />

            <Button
                android:id="@+id/register_Male"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:text="남성" />
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textSize="17sp"
                android:textColor="#2f2f30"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20.3dp"
                android:layout_marginBottom="10.7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="40.6dp"
            android:layout_marginRight="67.4dp"
            android:id="@+id/editText_age"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="48dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="10dp"
                android:text="세"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키"
            android:textSize="17sp"
            android:textColor="#2f2f30"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20.3dp"
            android:layout_marginBottom="10.7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:layout_marginLeft="40.6dp"
                android:layout_marginRight="67.4dp"
                android:id="@+id/editText_height"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="48dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="10dp"
                android:text="cm"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몸무게"
            android:textSize="17sp"
            android:textColor="#2f2f30"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20.3dp"
            android:layout_marginBottom="10.7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:layout_marginLeft="40.6dp"
                android:layout_marginRight="67.4dp"
                android:id="@+id/editText_weight"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="48dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="10dp"
                android:text="kg"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:onClick="click_next_button"
        android:background="@drawable/rectangle_button"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="21sp"
        android:textColor="#ffffff"/>

</LinearLayout>